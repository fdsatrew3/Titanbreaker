<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
        <include src="file://{resources}/styles/custom_game/auto_casts_config_button.css" />
	</styles>
	<scripts>
        <include src="file://{resources}/scripts/custom_game/auto_casts_config_button.js" />
	</scripts>
	<Panel hittest="false" class="AutoCastsConfigButtonContainer">
		<Panel hittest="false" class="AutoCastsConfigButtonBackground">
			<Image hittest="true"
				src ="file://{images}/spellicons/ogre_magi_multicast.png" 
				scaling="stretch-to-fit-preserve-aspect" 
				onactivate="ToggleAutoCastsConfigWindow()" 
				class="AutoCastsConfigButton" 
				onmouseover="DOTAShowTitleTextTooltip('Auto Casts', 'Use this button to configure how Auto Casts of abilities work.')" 
				onmouseout="DOTAHideTitleTextTooltip()"/>
		</Panel>
	</Panel>
</root>